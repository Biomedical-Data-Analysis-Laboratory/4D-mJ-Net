{
  "EXPERIMENT": 2,
  "root_path": "/home/stud/lucat/PhD_Project/Stroke_segmentation/",
  "dataset_path": "/local/home/lucat/DATASET/SUS2020_v2/",
  "PATIENT_TO_USE": ["ALL"],
  "OVERRIDE_MODELS_ID_PATH": "mJNet_DA_SGD_VAL5_02",
  "init": {
    "TF_CPP_MIN_LOG_LEVEL": "3",
    "per_process_gpu_memory_fraction": 1,
    "allow_growth": 1,
    "MULTIPROCESSING": 0
  },
  "relative_paths": {
    "labeled_images": "PATIENTS/SUS2020_v2/FINALIZE_PM/",
    "patients": "PATIENTS/SUS2020_v2/FINAL/",
    "save": {
      "model": "MODELS/",
      "partial_model": "TMP_MODELS/",
      "plot": "PLOTS/",
      "images": "IMAGES/",
      "text": "TEXT/",
      "intermediate_activation": "intermediate_activation/"
    }
  },
  "models": [
     {
      "name": "mJNet_LongJ_Drop",
      "loss": "dice_coef_loss",
      "metrics": ["mod_dice_coef","dice_coef"],
      "epochs": 3,
      "batch_size": 512,
      "classes_to_evaluate": ["penumbra","core","penumbracore"],
      "statistics": ["sensitivity", "specificity", "precision", "f1", "accuracy", "jaccard_index"],
      "val":{
        "validation_perc": 5,
        "number_patients_for_validation": 1,
        "number_patients_for_testing": 0,
        "random_validation_selection": 0
      },
      "test_steps":1,
      "_optimizer": {
        "name": "SGD",
        "learning_rate": 0.01,
        "decay": 1e-6,
        "momentum":0.9,
        "nesterov":"True"
      },
      "optimizer": {
        "name": "Adam",
        "lr": 0.001,
        "beta_1": 0.9,
        "beta_2":0.999,
        "epsilon":"None",
        "decay":0.0
      },
      "params":{
        "max_pool":{
          "long.1":5,
          "long.2":3,
          "long.3":2
        },
        "dropout":{
          "long.1":0.3,
          "1":0.3,
          "2":0.3,
          "3":0.3,
          "4":0.3,
          "5":0.3
        }
      },
      "callbacks":{
        "ModelCheckpoint": {
          "monitor": "mod_dice_coef",
          "mode": "max",
          "period": 1
        },
        "EarlyStopping": {
          "monitor": "loss",
          "min_delta": 0.00001,
          "patience": 25
        },
        "LearningRateScheduler": {
          "decay_step": 15,
          "decay_rate": 0.1
        },
        "CollectBatchStats": {
          "acc":"mod_dice_coef"
        }
      },
      "to_categ":0,
      "save_images": 1,
      "save_statistics": 1,
      "use_background_in_statistics": 0,
      "calculate_ROC": 0,
      "data_augmentation": 1,
      "cross_validation": 0,
      "train_again": 0,
      "supervised": 1,
      "save_activation_filter": 0
    }
  ]
}
