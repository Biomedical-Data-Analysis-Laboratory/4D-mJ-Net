{
  "EXPERIMENT": 99,
  "USE_SEQUENCE_TRAIN": 1,
  "root_path": "/home/stud/lucat/PhD_Project/Stroke_segmentation/",
  "dataset_path": "/local/home/lucat/DATASET/SUS2020_TIFF/",
  "PATIENTS_TO_TRAINVAL": ["ALL"],
  "PATIENTS_TO_TEST": ["01_001","01_007","01_013","01_019","01_025","01_031",
    "01_037","01_044","01_049","01_053","01_061","01_067","01_074",
    "02_001","02_007","02_013","02_019","02_025","02_031","02_036",
    "02_043","02_050","02_055","02_062","03_003","03_010","03_014",
    "01_057","01_059","01_066","01_068","01_071","01_073"],
  "OVERRIDE_MODELS_ID_PATH": "",
  "init": {
    "TF_CPP_MIN_LOG_LEVEL": "3",
    "per_process_gpu_memory_fraction": 1,
    "allow_growth": 1,
    "MULTIPROCESSING": 1
  },
  "relative_paths": {
    "labeled_images": "PATIENTS/SUS2020_TIFF/FINALIZE_PM_TIFF/",
    "patients": "PATIENTS/SUS2020_TIFF/Parametric_Maps/",
    "save": {
      "model": "MODELS/",
      "partial_model": "TMP_MODELS/",
      "plot": "PLOTS/",
      "images": "IMAGES/",
      "text": "TEXT/",
      "intermediate_activation": "intermediate_activation/"
    }
  },
  "models": [
     {
      "name": "mJNet_PM",
      "loss": "sparse_categorical_crossentropy",
      "metrics": ["sparse_categorical_crossentropy"],
      "epochs": 3,
      "batch_size": 1,
      "steps_per_epoch_ratio": 1,
      "classes_to_evaluate": ["penumbra","core","penumbracore"],
      "statistics": ["sensitivity", "specificity", "precision", "f1", "accuracy", "jaccard_index"],
      "val":{
        "validation_perc": 15,
        "number_patients_for_validation": 15,
        "number_patients_for_testing": 0,
        "random_validation_selection": 0
      },
      "test_steps":1,
      "optimizer": {
        "name": "rmsprop",
        "learning_rate": 0.001
      },
      "params":{
        "max_pool":{
          "long.1":5,
          "long.2":3,
          "long.3":2
        },
        "dropout":{
          "cbf_1":0.2,
          "cbv_1":0.2,
          "ttp_1":0.2,
          "tmax_1":0.2
        }
      },
      "callbacks":{
        "ModelCheckpoint": {
          "monitor": "val_loss",
          "mode": "max",
          "period": 1
        },
        "EarlyStopping": {
          "monitor": "val_loss",
          "min_delta": 0.00001,
          "patience": 12
        },
        "LearningRateScheduler": {
          "decay_step": 5,
          "decay_rate": 0.01
        },
        "CollectBatchStats": {
          "acc":"loss"
        },
        "TensorBoard": {
          "update_freq":"batch",
          "histogram_freq": 5
        }
      },
      "to_categ": 1,
      "save_images": 1,
      "save_statistics": 0,
      "use_background_in_statistics": 0,
      "calculate_ROC": 0,
      "data_augmentation": 1,
      "cross_validation": 0,
      "train_again": 0,
      "supervised": 1,
      "save_activation_filter": 0,
      "use_hickle": 0
    }
  ]
}
