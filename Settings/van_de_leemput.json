{
  "EXPERIMENT": 27,
  "USE_SEQUENCE_TRAIN": 1,
  "root_path": "/home/stud/lucat/PhD_Project/Stroke_segmentation/",
  "dataset_path": "/local/home/lucat/DATASET/SUS2020_TIFF/",
  "PATIENTS_TO_TRAINVAL": ["ALL"],
  "PATIENTS_TO_TEST": ["01_010","01_025","01_037","01_057","01_061","01_066","01_077","02_001","02_004","02_009","02_016","02_020","02_027","03_003","03_010","03_014"],
  "OVERRIDE_MODELS_ID_PATH": "",
  "init": {
    "TF_CPP_MIN_LOG_LEVEL": "3",
    "per_process_gpu_memory_fraction": 1,
    "allow_growth": 1,
    "MULTIPROCESSING": 1
  },
  "relative_paths": {
    "labeled_images": "/home/prosjekt/PerfusionCT/StrokeSUS/GT_TIFF/",
    "patients": "PATIENTS/SUS2020_TIFF/FINAL_TIFF/",
    "save": {
      "model": "MODELS/",
      "partial_model": "TMP_MODELS/",
      "plot": "PLOTS/",
      "images": "IMAGES/",
      "text": "TEXT/"
    }
  },
  "models": [
     {
      "name": "van_De_Leemput",
      "loss": "weighted_categorical_cross_entropy_loss",
      "metrics": ["weighted_categorical_cross_entropy", "mod_dice_coef"],
      "to_categ":1,
      "epochs": 100,
      "batch_size":16,
      "steps_per_epoch_ratio": 0.25,
      "classes_to_evaluate": ["penumbra", "core", "penumbracore"],
      "statistics": ["sensitivity", "specificity", "precision", "f1", "accuracy", "jaccard_index"],
      "val":{
        "validation_perc": 5,
        "number_patients_for_validation": 16,
        "number_patients_for_testing": 0,
        "random_validation_selection": 0
      },
      "test_steps":1,
      "optimizer": {
        "name": "SGD",
        "learning_rate": 0.01,
        "decay": 1e-6,
        "momentum":0.9,
        "nesterov":"True"
      },
      "params":{
        "dropout":{
          "1":0.5,
          "2":0.5
        }
      },
      "callbacks":{
        "ModelCheckpoint": {
          "monitor": "val_mod_dice_coef",
          "mode": "max",
          "period": 1
        },
        "EarlyStopping": {
          "monitor": "val_loss",
          "min_delta": 0.00001,
          "patience": 12
        },
        "LearningRateScheduler": {
          "decay_step": 10,
          "decay_rate": 0.01
        },
        "CollectBatchStats": {
          "acc":"mod_dice_coef"
        }
      },
      "save_images": 1,
      "save_statistics": 1,
      "use_background_in_statistics": 0,
      "calculate_ROC": 0,
      "data_augmentation": 1,
      "cross_validation": 0,
      "train_again": 0,
      "supervised": 1,
      "save_activation_filter": 0,
      "use_hickle": 0
    }
  ]
}
